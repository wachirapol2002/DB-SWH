                                </template>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dateLine">กำหนดการ-ระยะเวลา</label>
                            <input type="date" class="form-control" name="dateLine">
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary">เพิ่ม</button>
                            <a href="/project/<%= requirementId %>/detail" class="btn btn-light">ยกเลิก</a>
                        </div>
                    </form>
                </div>
                
            </div>
            <div class="container-fluid" style="min-height: 2rem; background-color: #f5f5f5;"></div>
        </main>
        <%- include('footer') %>
