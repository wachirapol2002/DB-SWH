<%- include('head') %>
<%- include('header') %>
<body>
    <div id="app">
        <main>
            <div class="container-fluid justify-content-center" style="min-height: 80vh; background-color:#f5f5f5;">
                <div class="row p-4"></div>
                <div class="container-fluid pt-2 pl-5 pr-5 pb-5 mt-5" style="width: 75vw; border-radius: 25px; background-color: #e7e7e7;">
                    <div class="col text-center my-2" style="color:rgb(96, 150, 180); font-size: 1.6rem;">
                        แก้ไขข้อมูลพนักงาน
                    </div>
                    <!-- <form action="" method="POST"> -->
                        <form :action="'/employee/edit/'+employee.employee_id" method="POST">
                            <div class="form-row">
                                <div class="form-group col-md-6 pr-4">
                                    <label for="empFirstname">ชื่อ</label>
                                    <input type="text" class="form-control" id="empFirstname" name="empFirstname" :value="employee.first_name" placeholder="ชื่อ">
                                </div>
                                <div class="form-group col-md-6 pl-4">
                                    <label for="empLastname">นามสกุล</label>
                                    <input type="text" class="form-control" id="empLastname" name="empLastname" :value="employee.last_name" placeholder="นามสกุล">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 pr-4">
                                    <label for="empEmail">E-mail</label>
                                    <input type="email" class="form-control" id="empEmail" name="empEmail" :value="employee.email" placeholder="อีเมล">
                                </div>
                                <div class="form-group col-md-6 pl-4">
                                    <label for="empPhone">หมายเลขโทรศัพท์</label>
                                    <input type="tel" class="form-control" id="empPhone" name="empPhone" :value="employee.phone_number" placeholder="หมายเลขโทรศัพท์">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6 pr-4">
                                    <label for="empJob">ตำแหน่ง</label>
                                    <input type="text" class="form-control" id="empJob" name="empJob" :value="employee.job" placeholder="ตำแหน่งงาน">
                                </div>
                                <div class="form-group col-md-6 pl-4">
                                    <label for="empSalary">เงินเดือน</label>
                                    <input type="number" min="12000" class="form-control" id="empSalary" name="empSalary" :value="employee.salary" placeholder="เงินเดือน">
                                </div>
                            </div>
                            
                            <div class="mt-4 text-center">
                                <button type="submit" class="btn btn-primary">บันทึก</button>
                                <a href="/employee" class="btn btn-light">ยกเลิก</a>
                            </div>
                            
                        </form>
                </div>
                
            </div>
            <div class="container-fluid" style="min-height: 2rem; background-color: #f5f5f5;"></div>
        </main>
        <%- include('footer') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script>
    var app = new Vue({
    el: '#app',
    data: {
        center:{
            'd-flex': true,
            'justify-content-center':true,
            'align-items-center':true
        },
        employee: JSON.parse(`<%- employee %>`)
    },
    methods: {
        
    },
    computed:{
        
    },
    watch:{
        
    },
})
    </script>
</body>
</html>